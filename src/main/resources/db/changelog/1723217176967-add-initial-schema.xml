            <!-- Foreign Key Columns-->
            <column name="manager_id" type="BIGINT"/>

            <!-- Auditing Columns-->
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createSequence sequenceName="employees_id_seq"/>

