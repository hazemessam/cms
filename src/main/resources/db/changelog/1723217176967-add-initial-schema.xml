            <column name="deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <!-- Foreign Key Columns-->
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="approver_id" type="BIGINT"/>

            <!-- Auditing Columns-->
            <column name="created_at" type="TIMESTAMP">
