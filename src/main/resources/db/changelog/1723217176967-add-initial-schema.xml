            </column>

            <!-- Foreign Key Columns-->
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="training_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- Auditing Columns-->
            <column name="created_at" type="TIMESTAMP">
